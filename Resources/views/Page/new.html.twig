{% extends '@MMAdmin/Admin/page.html.twig' %}

{% set pageHeadline = "Pagemanagment Section" %}
{% set pageSubline = "create new Page-Objects" %}

{% block admin_page_body %}
    <div class="box box-default">
        <div class="box-header"><h2 class="box-title">{{ 'Create Page' }}</h2></div>
        <div class="box-body">
            {% block admin_content %}
                {% set buttongroup %}
                    <div class="form-actions clearfix">
                        {{ form_widget(form.submit) }}
                        {{ form_widget(form.save_and_add) }}
                        {{ form_widget(form.save_and_back) }}

                        <a class="btn btn-warning btn-abort" href="{{ path('mm_cmf_admin_page_addon_page') }}">
                            <i class="fa fa-close"></i> abbrechen
                        </a>
                    </div>
                {% endset %}
                {{ form_start(form) }}
                <div class="form-main col-xs-12">{{ form_rest(form) }}</div>
                <div class="form-foot col-xs-12">{{ buttongroup }}</div>
                {{ form_end(form) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}